
package irgendwas;
import java.swing.JFormattedTextField;

public class KLM extends JFrame implements ActionListener{
JButton button;
JFormattedTextField kilometer;
JPanel panel;
JLabel distanz;
JLabel name;
JLabel frage;
JLabel co;

public KLM(){

  this.setTitle("CO2-Emission");
  this.setSize(400,200);
  this.panel = new JPanel();
  this.distanz = new JLabel("Distanz: ");
  panel.add(distanz);
  NumberFormat format = NumberFormat.getInstance();
  format.setGroupingUsed(false);
  NumberFormatter formatter = new NumberFormatter(format);
  formatter.setAllowsInvalid(false);
  
  this.kilometer = new JFormattedTextField(formatter);
  kilometer.setEnabled(true);
  kilometer.setSize(13,13);
  panel.add(kilometer);
  
  this.name = new JLabel("km");
  panel.add(name);
  
  this.frage = new JLabel("Transportart: ");
  panel.add(frage);
  
  //Array für Combobox
  String transportmittel[] = {"Motorad","Auto","Bus", "Zug"};
  //JCombobox erstellen
  JComboBox auswahl = new JComboBox(transportmittel);
  panel.add(auswahl);
  
  this.button = new JButton("hier drücken um Co2 zu berechen");
  button.addActionListener(this);
  panel.add(button);
  
  this.co = new JLabel("Co2: ");
  panel.add(co);
  
  //panel dem Fenster Hinzufügen
  this.add(panel);
  this.setVisible(true);
 }
 
  public static void main(String[] args){
  }
  
